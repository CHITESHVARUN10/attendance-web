<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <title>Attendance</title>
    <link rel="icon" href="/assets/sv_crop.png" type="image/x-icon" >

    <style>
         body {
            box-sizing: border-box;
            background-color: #F6F9FF;
            margin: 0;
            padding: 0;
        }
        .maal-apni {
            background-color: #F0F4FB;
            padding: 20px;
            margin-bottom: 20px;
            border: 1px solid #dee2e6;
            border-radius: 5px;
        }
        .over{
            overflow-y: scroll;
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
    <%- include('partials/sidebar') %>
<div class="over">
    <div class="container">
        <form id="f" class="mb-4">
            <center><h1>Attendance</h1></center>
            <div class="mb-3">
                <label for="date" class="form-label">Enter Date</label>
                <input type="date" name="date" id="date" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Generate</button>
        </form>
        <div id="user-container"></div>
    </div>
</div>
    <script>
        const form = document.querySelector("#f");
        const userContainer = document.getElementById('user-container');

        form.addEventListener("submit", async (e) => {
            e.preventDefault();
            userContainer.innerHTML = '';  
            const date = form.elements.date.value;
            console.log(date);

            try {
                const res = await axios.post(`http://localhost:3000/admin/calendar/${date}`);
                console.log(res);

                res.data.forEach(user => {
                    console.log(user);

                    const userd = document.createElement('div');
                    userd.className = 'maal-apni';
                    userd.innerHTML=`<h1>${user.username}</h1>
                    <p> Email: ${user.email}</p>
                      <p> Status: ${user.accounted_for}`
                   
                    

                    userContainer.appendChild(userd);
                });
            } catch (error) {
                console.error('Error fetching data:', error);
            }
        });
    </script>
</body>
</html>
